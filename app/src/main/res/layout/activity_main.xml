<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls"
    tools:context=".MainActivity">

    <fragment
        android:tag="myFirstFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        class="com.example.fragment_20200920.fragments.FirstFragment"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:tag="mySecondFragment"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                class="com.example.fragment_20200920.fragments.SecondFragment"/>

            <fragment
                android:tag="myFirstFragment2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                class="com.example.fragment_20200920.fragments.FirstFragment"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>